{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "assignees": ["cascer1"],
    "rebaseWhen": "conflicted",
    "customManagers": [
      {
        "customType": "regex",
        "managerFilePatterns": ["home/.chezmoidata/versions.yaml"],
        "matchStrings": [
          "^\\s+(\\w+)\\s*:\\s*'(?<currentValue>[^'].+)'\\s* #\\s*renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s"
        ],
        "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}

